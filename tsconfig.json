{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "removeComments": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "es5", "es6", "dom", "dom.iterable"
    ],
    "paths": {
      "@/admin/*": [
        "admin/*"
      ],
      "@/bin/*": [
        "bin/*"
      ],
      "@/config/*": [
        "config/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/controllers/*": [
        "controllers/*"
      ],
      "@/env/*": [
        "env/*"
      ],
      "@/enums/*": [
        "enums/*"
      ],
      "@/interfaces/*": [
        "interfaces/*"
      ],
      "@/firebase/*": [
        "firebase/*"
      ],
      "@/middlewares/*": [
        "middlewares/*"
      ],
      "@/models/*": [
        "models/*"
      ],
      "@/repositories/*": [
        "repositories/*"
      ],
      "@/routers/*": [
        "routers/*"
      ],
      "@/schemas/*": [
        "schemas/*"
      ],
      "@/security/*": [
        "security/*"
      ],
      "@/services/*": [
        "services/*"
      ],
      "@/swagger/*": [
        "swagger/*"
      ],
      "@/types": [
        "types/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/validations/*": [
        "validations/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
}